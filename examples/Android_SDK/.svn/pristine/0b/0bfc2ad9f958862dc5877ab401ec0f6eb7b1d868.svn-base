<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ihealth.sdk.AM3S"
    tools:showIn="@layout/activity_am3_s"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="Disconnect" />
            <Button
                android:id="@+id/btn_getpicture"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="GetPicture" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_setpicture"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="SetPicture" />
                <EditText
                    android:id="@+id/set_picture_index"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:inputType="number"/>
            </LinearLayout>
            <Button
                android:id="@+id/getbattery"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="getBattery" />

            <Button
                android:id="@+id/btn_SetUserMessage"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="SetUserMessage" />

            <Button
                android:id="@+id/getuserid"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="getUserId" />

            <Button
                android:id="@+id/getalarmnum"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="getAlarnNum" />

            <Button
                android:id="@+id/syncstage"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="syncStage" />

            <Button
                android:id="@+id/syncactivity"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="syncActivity" />

            <Button
                android:id="@+id/syncreal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="syncReal" />

            <Button
                android:id="@+id/getuserinfo"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="getUserInfo" />

            <Button
                android:id="@+id/getalarminfo"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="getAlarmInfo" />

            <Button
                android:id="@+id/setuserid"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="setUserId" />

            <Button
                android:id="@+id/sendrandom"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="sendRandom" />
            <TextView
                android:id="@+id/tv_return"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
