<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ihealth.sdk.BP5S"
    tools:showIn="@layout/activity_bp5s">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_getBattery_bp5s"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Getbattery" />
            <Button
                android:id="@+id/btn_getFunctionInfo_bp5s"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="GetFunctionInfo" />

            <Button
                android:id="@+id/btn_getMeasureStatus_bp5s"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="GetMeasureStatus" />

            <Button
                android:id="@+id/btn_getOfflineDataNum_bp5s"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="GetOfflineDataNum" />

            <Button
                android:id="@+id/btn_getOfflineData_bp5s"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="GetOfflineData" />

            <Button
                android:id="@+id/btn_setRepeatedlyMeasureParameter_bp5s"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="setRepeatedlyMeasureParameter" />

            <Button
            android:id="@+id/btn_deleteRepeatedlyMeasureSetting_bp5s"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="deleteRepeatedlyMeasureSetting" />

            <Button
                android:id="@+id/btn_disconnect_bp5s"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="disconnect" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="自升级部分"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/changeService_Bp5s"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="changeService" />
                <EditText
                    android:id="@+id/Service_Bp5s"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="服务器1or404"
                    android:inputType="number"/>


            </LinearLayout>

            <Button
                android:id="@+id/checkInfoFormCloudAndDevice_Bp5s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="checkInfoFormCloudAndDevice" />
            <Button
                android:id="@+id/startUpgrade_Bp5s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="startUpgrade" />
            <Button
                android:id="@+id/stopUpgrade_Bp5s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stopUpgrade" />
            <Button
                android:id="@+id/checkIsUpgrade_Bp5s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="checkIsUpgrade" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/tv_returnMessage"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </ScrollView>

</LinearLayout>
